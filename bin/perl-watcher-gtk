#!/usr/bin/env perl

use 5.12.0;
use strict;
use warnings;

use Carp;
use Devel::Comments;
use Hash::Merge qw( merge );
use FindBin;

BEGIN { unshift @INC, "$FindBin::Bin/../lib" }

use App::PerlWatcher::Util::Bootstrap qw/get_home_file config engine_config/;
use aliased 'App::PerlWatcher::Engine';
use aliased 'App::PerlWatcher::UI::Gtk2::Application';

my $config = merge(
    engine_config(), 
    config( 
        get_home_file(
            'gtk2.conf',
            'App-PerlWatcher-UI-Gtk2',
            'examples/Gtk2.conf.example',
        )
    )
);

my $engine = Engine->new(config => $config, backend_id => 'Gtk2');
my $app = Application->new(engine => $engine);

$engine->frontend( $app );

$app->show;
$engine->start;

1;

